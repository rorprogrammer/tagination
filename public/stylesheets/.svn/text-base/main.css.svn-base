}

div#xsnazzy{
	margin: auto;
	padding: 150px 0px;
	width: 1002px;
}

#xsnazzy h1, #xsnazzy h2, #xsnazzy p {margin:0 0; letter-spacing:1px;}
#xsnazzy h1 {font-size:2.5em; color:#fff;}
#xsnazzy h2 {font-size:2em;color:#06a; border:0;}
#xsnazzy p {padding-bottom:0.5em;}
#xsnazzy h2 {padding-top:0.5em;}
#xsnazzy {background: transparent; margin:1em;}

.xtop_m, .xbottom_m {display:block; background:transparent; font-size:1px;}
.xb1, .xb2, .xb3, .xb4, .xb5 {display:block; overflow:hidden;}
.xb1, .xb2, .xb3, .xb4 {height:1px;}
.xtop_m .xb2, .xtop_m .xb3, .xtop_m .xb4, .xtop_m .xb5{
	background:#6994b4;; border-left:1px solid #425C70; border-right:1px solid #425C70;
}
.xbottom_m .xb2, .xbottom_m .xb3, .xbottom_m .xb4, .xbottom_m .xb5{
	background:#6994b4; border-left:1px solid #425C70; border-right:1px solid #425C70;
}
.xb1 {margin:0 6px; background:#425C70;}
.xb2 {margin:0 4px; border-width:0 3px;}
.xb3 {margin:0 3px;}
.xb4 {margin:0 2px;}
.xb5 {height:2px; margin:0 1px;}

.main_box_content {
	text-align: center;
	background-image: url("../images/base/logo-gross.png");
	/**background-repeat: repeat-x;*/
	border:0 solid #425C70; border-width:0 1px;
	position:relative;
	margin:auto;
	height: 300px;
}

#start_notice{
	background-color: #90ABBE;
	border: 1px solid #425C70;
	color: #CA2400;
	text-align: center;
	padding: 20px;
	margin:auto;
	width: 400px;
}
#tagination_about{
	background-color: #90ABBE;
	border: 1px solid #425C70;
	position:relative;
	margin: auto;
	padding: 10px;
	text-align: justify;
	width: 80%;
}
