#footer{
	width: 100%;
	background: url("../images/base/verlauf-footer.gif") repeat-x;
	color: #ccc; 
	text-align: center;
	position: absolute; 
	padding-top: 15px;
    bottom: 0px !important;
	height: 35px;
}
#footer a{
	color: #ccc;
}

#index_content{
	background-image: url("../images/base/verlauf-main.gif");
	background-repeat: repeat-x;
	min-width: 100%;
	min-height: 100%;
}
#search_content{
	background-image: url("../images/search/verlauf-search.gif");
	background-repeat: repeat-x;
	min-width: 100%;
	min-height: 100%;
}

#preview_content{
	background-image: url("../images/search/verlauf-search.gif");
	background-repeat: repeat-x;
	min-width: 100%;
