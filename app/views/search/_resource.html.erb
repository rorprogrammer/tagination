<div class="td">
<div id="res_table" >
	<div class="tr_image_<%=media_type%>">
		<div class="td_res">
				<div id="border_one">
					<div id="border_two">
						<div id="border_three">
							<div id="border_four">
							<p class = "img">	
				<%= link_to image_tag(object.list_thumb_url), 
						   preview_path(:id => resource.resource_id, 
										:preview_system => system, 
										:tags => @tags.join('+'), 
										:page => 1,
										:per_page => 8, 
										:sort_by => 'relevance'),
					    				:class => "test",
										:title => %{#{image_tag(resource.js_thumb_url)}} %>
								
							</p>
							</div>			
						</div>				
					</div>
				</div>
		</div>
	</div>
	<div class="tr_title">
		<div class="td_res">
		<% if(resource.title.strip.length > 20)%>
			<%= h(resource.title.strip.slice(0..12))+("...") %>
		<% else%>
			<%= h(resource.title.strip)%>
		<% end %>
		</div>
	</div>
	<div class="tr_date">
		<div class="td_res">
		<%= h(resource.upload_date)%>
		</div>
	</div>
	<div class="tr_tags">
		<div class="td_res">
			<% if resource.tags.length > 8 %>
				<% resource.tags.slice(0..8).each do |tag| %>
					<% if tag.size > 18 %>
					<% else %>
					<span class="list_tag"><%= create_link(tag, 50, 11, @media_to_search)%></span>
					<% end %>
				<% end %>
					<span class="list_tag">...</span>
			<% else%>
				<% resource.tags.each do |tag| %>
					<span class="list_tag"><%= create_link(tag, 50, 11, @media_to_search)%></span>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
</div>